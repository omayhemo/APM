    const suggestions: MigrationSuggestion[] = [];
    
    // Analyze each command
    for (const cmd of migrationStatus.commands) {
      const cmdSuggestions = this.generateCommandSuggestions(cmd);
      suggestions.push(...cmdSuggestions);
